ðŸŸ¨js
document.querySelector("#AroButton").onclick = function(){

    const body = document.querySelector("#Arobody");
    

    console.log(body.style);

    body.style.color = "white";
    body.style.backgroundColor = "black";
    
}

document.querySelector("#MisakiButton").onclick = function(){

    const body = document.querySelector("#Arobody");
    

    console.log(body.style);

    body.style.color = "black";
    body.style.backgroundColor = "white";
    
}
