ðŸŸ¨js
document.querySelector("#AroButton").onclick = function(){

    const div = document.querySelector("#AroH1");
    

    console.log(div.style);

    div.style.color = "white";
    div.style.backgroundColor = "black";
    
}

document.querySelector("#MisakiButton").onclick = function(){

    const div = document.querySelector("#AroH1");
    

    console.log(div.style);

    div.style.color = "black";
    div.style.backgroundColor = "white";
    
}
